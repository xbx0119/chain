{
    "apps": [
        {
            "name": "chain",
            "script": "./bin/chain",
            "cwd": "./",
            "instances": 1,
            "exec_mode": "cluster",
            "watch": true,
            "env": {
                "NODE_ENV": "production"
            },
            "error_file": "./logs/err.log",
            "out_file": "./logs/out.log",
            "log_date_format": "YYYY-MM-DD HH:mm Z"
        }
    ]
}
